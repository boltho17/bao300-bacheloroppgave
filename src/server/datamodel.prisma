interface Node {
  id: ID!
}

type User implements Node {
  id: ID! @id
  email: String! @unique
  phone: Int @unique
  customer: Customer @relation(link: INLINE)
  vendor: Vendor @relation(link: INLINE)
}

type Customer implements Node {
  id: ID! @id
  firstName: String!
  lastName: String!
  address: String!
  user: User!
}

type Vendor implements Node {
  id: ID! @id
  displayName: String!
  organizationNumber: Int! @unique
  bankAccount: String! @unique
  logoImage: String!
  facebookPageURL: String
  address: String!
  user: User!
  products: [Product!]
}

type Product implements Node {
  id: ID! @id
  title: String!
  flavorProfile: String
  description: String!
  info: String
  published: Boolean!
  vendor: Vendor @relation(link: INLINE)
  country: Country @relation(link:INLINE)
  productImages: [ProductImage!]!
}

type ProductImage implements Node {
  id: ID! @id
  image: String!
  product: Product @relation(link: INLINE)
}

type Country implements Node {
  id: ID! @id
  name: String! @unique
  region: Region @relation(link: INLINE)
  products: [Product!]
}

type Region implements Node {
  id: ID! @id
  name: String! @unique
  countries: [Country!]!
}

